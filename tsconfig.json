{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": [
    "cli/**/*.ts",
    "tasks/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "cache",
    "artifacts",
    "dist"
  ],
  "references": [
    { "path": "./compliant-bill-token/tsconfig.json" },
    { "path": "./apps/digital-currency-manager/tsconfig.json" },
    { "path": "./apps/stablecoin-manager/tsconfig.json" }
  ]
}
